<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Trad!</h1>
             <p>Look at different tallies of fitness</p>
             <p>
                <a class="btn btn-danger btn-large" href="/tally/new">Add New Tally</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% tally.forEach(function(tally){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail" >
                   <img src="<%= tally.image %>">
                   <div class="caption">
                       <h4><%= moment(tally.dated).format('lll') %></h4>
                   </div>
                   <p>
                       <a href="/tally/<%= tally._id %>" class="btn btn-secondary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
