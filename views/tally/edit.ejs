<% include ../partials/header %>

    <div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= tally.weight %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/tally/<%= tally._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="tally[exercise]" value="<%= tally.exercise %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="tally[weight]" value="<%= tally.weight %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="tally[image]" value="<%= tally.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="tally[description]" value="<%= tally.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/tally">Go Back</a>
        </div>
    </div>
</div>





<% include ../partials/footer %>

